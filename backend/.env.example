# Application
APP_NAME=InterviewIQ
APP_VERSION=1.0.0
DEBUG=False

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/interview_prep

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-to-a-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=2

# AI Services
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Storage
MAX_AUDIO_SIZE_MB=50
MAX_AUDIO_DURATION_MINUTES=5

# Cloudflare R2 Storage (Required)
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=  # Optional: your R2 custom domain for public access (leave empty if not using)

# Whisper
WHISPER_MODEL=base.en
WHISPER_DEVICE=cpu

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
